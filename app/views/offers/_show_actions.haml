.panel.panel-default
  .panel-heading
    .panel-title
      %strong
        = I18n.t(:"labels.panels.title.default")
  .list-group
    - if can? :update, offer
      %a.list-group-item{href: edit_offer_path(offer)}
        %i.fa.fa-edit
        = I18n.t(:"actions.edit")
    %a.list-group-item{href: offer_path(offer), data: { method: "DELETE", notyConfirm: I18n.t(:"messages.confirm.delete") } }
      %i.fa.fa-trash
      = I18n.t(:"actions.delete")
