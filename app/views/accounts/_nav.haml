- unless defined?(path)
  - path = ""
- unless defined?(active)
  - active = "basic"
%ul.nav.nav-vertical-tabs
  %li{class: (active == "basic" ? "active" : "")}
    %a{href: "#{path}#basic", data: {toggle: ("tab" if path.blank?)}}
      = I18n.t("nav.subnav.account.basic")
      %i.fa.fa-book.fa-fw
  %li{class: (active == "address" ? "active" : "")}
    %a{href: "#{path}#address", data: {toggle: ("tab" if path.blank?)}}
      = I18n.t("nav.subnav.account.address")
