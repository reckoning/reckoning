  %li{class: (active == "taxes" ? "active" : "")}
    %a{href: "#{path}#taxes", data: {toggle: ("tab" if path.blank?)}}
      = I18n.t("nav.subnav.account.taxes")
      %i.fa.fa-building.fa-fw
  %li{class: (active == "mailing" ? "active" : "")}
    %a{href: "#{path}#mailing", data: {toggle: ("tab" if path.blank?)}}
      = I18n.t("nav.subnav.account.mailing")
      %i.fa.fa-send.fa-fw
  %li{class: (active == "dropbox" ? "active" : "")}
    %a{href: dropbox_path}
      = I18n.t("nav.subnav.account.dropbox")
      %i.fa.fa-dropbox.fa-fw
