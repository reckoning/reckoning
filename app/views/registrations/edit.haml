- content_for :title do
  = I18n.t(:"meta.title.user.edit")
.row
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h1
          = I18n.t(:"headlines.account")

      .col-xs-12.col-md-4
        .btn-group.pull-right.resource-nav
          = link_to I18n.t(:"nav.subnav.back"), root_path, class: "btn btn-default"

    .row
      .col-xs-12.col-lg-2.col-md-3.col-sm-3
        %ul.nav.nav-vertical-tabs
          %li.active
            %a{href: "#basic", data: {toggle: "tab"}}
              = I18n.t("nav.subnav.user.basic")
              %i.glyphicon.glyphicon-user
          %li
            %a{href: "#address", data: {toggle: "tab"}}
              = I18n.t("nav.subnav.user.address")
              %i.glyphicon.glyphicon-globe
          %li
            %a{href: "#banking", data: {toggle: "tab"}}
              = I18n.t("nav.subnav.user.banking")
              %i.glyphicon.glyphicon-credit-card
          %li
            %a{href: "#settings", data: {toggle: "tab"}}
              = I18n.t("nav.subnav.user.settings")
              %i.glyphicon.glyphicon-cog
          %li
            %a{href: "#mailing", data: {toggle: "tab"}}
              = I18n.t("nav.subnav.user.mailing")
              %i.glyphicon.glyphicon-send

      .col-xs-12.col-lg-10.col-md-9.col-sm-9
        = form_for @user, url: user_registration_path do |form|
          .tab-content
            .tab-pane.active#basic
              %fieldset
                %legend
                  = I18n.t(:"labels.user.settings.basic")
                = render "users/basic", form: form, resource: @user
            .tab-pane#address
              %fieldset
                %legend
                  = I18n.t(:"labels.user.settings.address")
                = render "addresses/fields", resource: @user
            .tab-pane#banking
              %fieldset
                %legend
                  = I18n.t(:"labels.user.settings.banking")
                = render "users/banking", form: form, resource: @user
            .tab-pane#settings
              %fieldset
                %legend
                  = I18n.t(:"labels.user.settings.taxes")
                = render "users/settings", form: form, resource: @user
            .tab-pane#mailing
              %fieldset
                %legend
                  = I18n.t(:"labels.user.mailing")
                = render "users/mailing", form: form, resource: @user

          = render "shared/forms/submit", path: root_path
